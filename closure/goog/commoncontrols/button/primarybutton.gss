
@def CONTROLS_BUTTON_PRIMARY_BG_COLOR #d14836;
@def CONTROLS_BUTTON_PRIMARY_BORDER_COLOR transparent;
@def CONTROLS_BUTTON_PRIMARY_GRADIENT top,#dd4b39,#d14836;
@def CONTROLS_BUTTON_PRIMARY_TEXT_COLOR #fff;
@def CONTROLS_BUTTON_PRIMARY_TEXT_SHADOW 0px 1px rgba(0, 0, 0, 0.1);
@def CONTROLS_BUTTON_PRIMARY_BOX_SHADOW none;
@def CONTROLS_BUTTON_PRIMARY_TEXT_TRANSFORM uppercase;

@def CONTROLS_BUTTON_PRIMARY_HOVER_BG_COLOR #c53727;
@def CONTROLS_BUTTON_PRIMARY_HOVER_BORDER_COLOR #b0281a;
@def CONTROLS_BUTTON_PRIMARY_HOVER_BOTTOM_BORDER_COLOR #af301f;
@def CONTROLS_BUTTON_PRIMARY_HOVER_GRADIENT top,#dd4b39,#c53727;
@def CONTROLS_BUTTON_PRIMARY_HOVER_BOX_SHADOW 0px 1px 1px rgba(0, 0, 0, 0.2);

@def CONTROLS_BUTTON_PRIMARY_ACTIVE_BG_COLOR #b0281a;
@def CONTROLS_BUTTON_PRIMARY_ACTIVE_BORDER_COLOR #992a1b;
@def CONTROLS_BUTTON_PRIMARY_ACTIVE_GRADIENT top,#dd4b39,#b0281a;
@def CONTROLS_BUTTON_PRIMARY_ACTIVE_BOX_SHADOW inset 0px 1px 2px rgba(0, 0, 0, 0.3);
@def CONTROLS_BUTTON_PRIMARY_ACTIVE_TOP_BORDER_COLOR
    CONTROLS_BUTTON_PRIMARY_ACTIVE_BORDER_COLOR;

@def CONTROLS_BUTTON_PRIMARY_CLEAR_FOCUS_OUTLINE none;

@def CONTROLS_BUTTON_PRIMARY_FOCUS_OUTLINE_IE8_FALLBACK
    1px solid CONTROLS_BUTTON_PRIMARY_BG_COLOR;

.controls-button-primary {
  @mixin box_shadow(CONTROLS_BUTTON_PRIMARY_BOX_SHADOW);
  @mixin linear_gradient(
      CONTROLS_BUTTON_PRIMARY_GRADIENT, CONTROLS_BUTTON_PRIMARY_BG_COLOR);

  border: 1px solid CONTROLS_BUTTON_PRIMARY_BORDER_COLOR;
  color: CONTROLS_BUTTON_PRIMARY_TEXT_COLOR;
  text-shadow: CONTROLS_BUTTON_PRIMARY_TEXT_SHADOW;
  text-transform: CONTROLS_BUTTON_PRIMARY_TEXT_TRANSFORM;
}

/* Keep styles in order -- hover, focus, active */

.controls-button-primary.controls-button-hover {
  @mixin box_shadow(CONTROLS_BUTTON_PRIMARY_HOVER_BOX_SHADOW);
  @mixin linear_gradient(
      CONTROLS_BUTTON_PRIMARY_HOVER_GRADIENT, CONTROLS_BUTTON_PRIMARY_HOVER_BG_COLOR);

  border: 1px solid CONTROLS_BUTTON_PRIMARY_HOVER_BORDER_COLOR;
  border-bottom-color: CONTROLS_BUTTON_PRIMARY_HOVER_BOTTOM_BORDER_COLOR;
}

.controls-button-primary:focus {
  @mixin controls_button_focus(CONTROLS_BUTTON_PRIMARY_FOCUS_OUTLINE_IE8_FALLBACK);
}

/* This class is applied to clear the above :focus style. */
.controls-button-primary.controls-button-clear-outline {
  @mixin box_shadow(none);
  outline: CONTROLS_BUTTON_PRIMARY_CLEAR_FOCUS_OUTLINE;
}

.controls-button-primary:active {
  @mixin box_shadow(CONTROLS_BUTTON_PRIMARY_ACTIVE_BOX_SHADOW);
  @mixin linear_gradient(
      CONTROLS_BUTTON_PRIMARY_ACTIVE_GRADIENT, CONTROLS_BUTTON_PRIMARY_ACTIVE_BG_COLOR);

  border: 1px solid CONTROLS_BUTTON_PRIMARY_ACTIVE_BORDER_COLOR;
  border-top: 1px solid CONTROLS_BUTTON_PRIMARY_ACTIVE_TOP_BORDER_COLOR;
}

.controls-button-primary.controls-button-disabled {
  background: CONTROLS_BUTTON_PRIMARY_BG_COLOR;
  filter: alpha(opacity=50);
  opacity: 0.5;
}
